<h1 class="text-center">Search Your Favorite Songs</h1>
<br/>

<%= form_tag "/search", class: "form-inline text-center" do %>
  <%= label_tag :title %>
  <%= text_field_tag :title, nil, class: 'form-control' %>
  <%= label_tag :band %> <!-- what is that doing here? sth from workshops no.1? -->
  <%= text_field_tag :band, nil, class: 'form-control' %>
  <%= submit_tag "Search", class: 'btn btn-primary' %>
<% end %>
<br/>

<% if @tracks.any? %>
  <h2 class="text-center"><%= @tracks_header %></h2>
<% end %>

<% @tracks.each do |track| %>
  <%= render 'tracks/track', track: track %>
<% end %>
